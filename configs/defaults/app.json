{
  "template_engine": "libs/bash-tpl/bash-tpl",
  "lockfile": ".lock",
  "libraries": "libs",
  "configurations": "configs",
  "templates": "configs/templates",
  "dehydrated": "dehydrated/dehydrated",
  "hosts": "configs/hosts.json",
  "outputs": "certs",

  "logger": {
    "level": 1,
    "directory": "log",
    "logfile": "log.txt",
    "tmpfile": "tmp.txt",
    "dehydrated_output": "dehydrated.txt",
    "dehydrated_errors": "dehydrated_errors.txt",
    "stdout_off": false,
    "file_off": false
  },

  "reporters": {
    "common": "email",
    "critical": "sms"
  },

  "email": {
    "enabled": false,
    "script": "app/reporters/mailer",
    "desc": "send a report email",
    "subject": "Automatically generated report"
  },

  "sms": {
    "script": "app/reporters/textme",
    "url": "https://smsapi.free-mobile.fr/sendmsg"
  }

}